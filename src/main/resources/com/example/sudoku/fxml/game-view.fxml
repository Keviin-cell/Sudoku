<AnchorPane prefHeight="749.0" prefWidth="749.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sudoku.controller.GameController">

    <!-- Background -->
    <ImageView fitHeight="749.0" fitWidth="749.0" preserveRatio="true">
        <Image url="@../images/background.png" />
    </ImageView>

    <!-- Title -->
    <Label layoutX="176.0" layoutY="39.0" prefHeight="118.0" prefWidth="405.0" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 4, 0.2, 2, 2);" text="SUDOKU" textFill="WHITE">
        <font>
            <Font name="Arial Black" size="80.0" />
        </font>
    </Label>

    <!-- Sudoku Grid -->
    <GridPane fx:id="grid" gridLinesVisible="true" layoutX="194.0" layoutY="180.0" prefHeight="299.0" prefWidth="361.0" style="-fx-border-color: black; -fx-border-width: 2px;">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
    </GridPane>

    <!-- Action Buttons Grouped -->
    <AnchorPane layoutY="600.0" prefHeight="80.0" prefWidth="749.0">
        <children>
            <Button fx:id="newGameButton" layoutX="80.0" layoutY="13.0" onAction="#OnNewGameClick" prefHeight="54.0" prefWidth="180.0" style="-fx-background-color: #5388A4; -fx-border-radius: 100;" text="NUEVO JUEGO" textFill="WHITE">
                <font>
                    <Font name="Arial Black" size="18.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>

            <Button fx:id="menuButton" layoutX="285.0" layoutY="13.0" onAction="#changeScene" prefHeight="54.0" prefWidth="180.0" style="-fx-background-color: #5388A4; -fx-border-radius: 100;" text="MENÃš" textFill="WHITE">
                <font>
                    <Font name="Arial Black" size="18.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>

            <Button fx:id="helpButton" layoutX="490.0" layoutY="13.0" onAction="#OnHelpButtonClick" prefHeight="54.0" prefWidth="180.0" style="-fx-background-color: #5388A4; -fx-border-radius: 100;" text="AYUDA" textFill="WHITE">
                <font>
                    <Font name="Arial Black" size="18.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </children>
    </AnchorPane>
   <Label layoutX="176.0" layoutY="544.0" text="4 FALTANTES: ">
      <font>
         <Font name="Arial Black" size="24.0" />
      </font>
   </Label>
   <Label fx:id="remain" layoutX="375.0" layoutY="544.0" text="0">
      <font>
         <Font name="Arial Black" size="24.0" />
      </font>
   </Label>

</AnchorPane>
